mdp

module ThreeOut_allLoPositive
  // 0 initial; 1,2 route to goal; 3 routes to sink; 4 goal; 5 sink
  s : [0..5] init 0;

  // --- action a ---
  // lo(goal)=0.05+0.05=0.10; hi(sink)=0.60 -> Pmin(goal) ≥ max(0.10, 1-0.60=0.40)=0.40
  [a] s=0 ->
    [0.05,0.50] : (s'=1) +
    [0.05,0.50] : (s'=2) +
    [0.02,0.60] : (s'=3);

  // --- action b ---
  // lo(goal)=0.06+0.06=0.12; hi(sink)=0.30 -> Pmin(goal) ≥ max(0.12, 0.70)=0.70
  [b] s=0 ->
    [0.06,0.60] : (s'=1) +
    [0.06,0.60] : (s'=2) +
    [0.02,0.30] : (s'=3);

  // Route successors
  [] s=1 -> (s'=4);
  [] s=2 -> (s'=4);
  [] s=3 -> (s'=5);

  // Absorbing
  [] s=4 -> (s'=4);
  [] s=5 -> (s'=5);
endmodule

rewards
  [a] true : 1;
  [b] true : 1;
endrewards

label "goal" = s=4;
label "Crash" = s=5;
