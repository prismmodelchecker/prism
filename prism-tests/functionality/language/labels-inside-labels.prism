dtmc

module die

	// local state
	s : [0..7] init 0;
	// value of the die
	d : [0..6] init 0;

	[] s=0 -> 0.5 : (s'=1) + 0.5 : (s'=2);
	[] s=1 -> 0.5 : (s'=3) + 0.5 : (s'=4);
	[] s=2 -> 0.5 : (s'=5) + 0.5 : (s'=6);
	[] s=3 -> 0.5 : (s'=1) + 0.5 : (s'=7) & (d'=1);
	[] s=4 -> 0.5 : (s'=7) & (d'=2) + 0.5 : (s'=7) & (d'=3);
	[] s=5 -> 0.5 : (s'=7) & (d'=4) + 0.5 : (s'=7) & (d'=5);
	[] s=6 -> 0.5 : (s'=2) + 0.5 : (s'=7) & (d'=6);
	[] s=7 -> (s'=7);

endmodule

// l1 = ((d>=3 & d<=5) | d<=5) & d=2
label "l1" = "l2" & d=2;
// l2 = (d>=3 & d<=5) | d<=5
label "l2" = "l3" | "l4";
// l3 = d>=3 & d<=5
label "l3" = f2 & "l4";
// l4 = d<=5
label "l4" = f1;
// l5 = d<=5
label "l5" = d<=5;

formula f1 = "l5";
formula f2 = d>=3;
