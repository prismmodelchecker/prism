// Simple example test for step-bounded cumulative reward
// The model is in fact a MC
// We also check -lp although it does not support the feature, but the testing ensures that an exception (and not a wrong result) is given.

module M

x:[0..4] init 0;

[a] x=0 -> (x'=1);
[b] x=0 -> (x'=2);
[c] x=0 -> (x'=3);
[d] x=1 -> (x'=4);
[e] x=2 -> (x'=4);
[f] x=3 -> (x'=4);
[] x=4 -> (x'=4);

endmodule

rewards "R1"
 [a] true : 1;
 [c] true : 0.5;
 [d] true : 1;
 [e] true : 3;
 [f] true : 2.4;
endrewards

rewards "R2"
 [a] true : 1;
 [c] true : 1;
 [d] true : 1;
 [e] true : 1;
 [f] true : 1;
endrewards

rewards "R3"
 [b] true : 1;
endrewards

rewards "R4"
 [f] true : 1;
endrewards
