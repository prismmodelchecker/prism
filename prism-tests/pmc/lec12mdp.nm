// Simple MDPs from Lec 12 of Probabilistic Model Checking

mdp

// version: 1 or 2
// TODO: enable both in .args file
const int version;

module M

s:[0..3];

[a] s=0 -> 1:(s'=1);
[b] s=1 -> 0.7:(s'=0) + 0.3:(s'=(version=1)?1:3);
[c] s=1 -> 0.5:(s'=2) + 0.5:(s'=3);
[a] s=2 -> 1:(s'=2);
[a] s=3 -> 1:(s'=3);

endmodule

label "heads" = s=2;
label "tails" = s=3;
